{% extends "base.html.jinja2" %}

{% block title %}{{ current_category.seo_title }} Kategorisindeki Linkler{% endblock %}
{% block description %}{{ current_category.seo_title }} Kategorisindeki Linkler — Internet Güzeldir{% endblock %}

{% block main %}

<div id="main-header">
    <h2>{{ current_category.seo_title }}</h2>
    {% if current_category.seo_desc %}<p>{{ current_category.seo_desc }}</p>{% endif %}
</div>

{% if current_category.links %}
  <ul class="links">
    {% for link in current_category.links|sort(attribute='create_time') %}
      {% include "link_as_list_item.html.jinja2" %}
    {% endfor %}
  </ul>
{% endif %}
{% endblock %}
