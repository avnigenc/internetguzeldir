  <style>
    body  {
      font-family: sans-serif;
      background: #000;
      color: #d6d6d6;
      margin: 0 auto;
      padding: 10px;
      max-width:800px;
    }
    #header {
      margin-bottom: 50px;
    }
    h1    {
      font-size:24px;
      text-align: center;
    }
    p {
      margin-bottom: 10px;
      text-align: center;
    }
    h2    {
      font-size:14px;
      font-weight:bold;
      margin: 0;
      padding: 0;
      text-align:center;
    }
    table {
      background:#272822;
      border-radius: 10px;
      width:100%;
      padding:0;
      margin: 0 auto;
      border-collapse:collapse;
      font-size:14px;
    }
    td, th {
      vertical-align:top;
      padding: 10px;
      border-bottom:1px dashed #75715E;
    }
    a {
      color: #e87d3e;
      text-decoration:none
    }
    .seperator { background: #3e3e3e}
  </style>
</head>
<body>
