<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    body  {
      font-family: sans-serif;
      background: #000;
      color: #d6d6d6;
      margin: 0 auto;
      padding: 10px;
      max-width: 800px;
    }
    #header { margin-bottom: 50px;}
    h1      { text-align: center; }
    h2      { text-align:center; }
    table {
      background:#272822;
      border-radius: .5rem;
      padding:0;
      margin: 0;
      border-collapse:collapse;
      font-size:14px;
      width: 100%;
    }
    th {
      text-align: left;
    }
    td, th {
      vertical-align:top;
      padding: 10px;
      border-bottom:1px dashed #75715E;
    }
    tr:last-child td, tr:last-child th {
      border-bottom: none;
    }
    a {
      color: #e87d3e;
      text-decoration:none
    }
  </style>
</head>
<body>
<div id="header">
  <h1>Faydalı Linkler</h1>
  <p><a
href="https://docs.google.com/forms/d/e/1FAIpQLSdxpZ_TYzDVaF5QAy-7aqGtoHtscfEGrBpZxANr9M35o5XBrw/viewform">Tavsiye
Gönder</a></p>
</div>
{% for section, links in sections.items() %}
  <div class="section">
  <h2>{{section}}</h2>
  <table>
    <tr><th>İsim</th><th>Açıklama</th><th>Tür</th><th>Dil</th></tr>
      {% for name, properties in links.items() %}
      <tr>
        <td class="title"><a href="{{ properties.url }}">{{ name }}</a></td>
        <td class="desc">{{properties.desc}}</td>
        <td class="tayp">{{properties.tayp}}</td>
        <td>{{properties.lang}}</td>
      </tr>
      {% endfor %}
  </table>
  </div>
  {% endfor %}
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-86514140-3"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'UA-86514140-3');
  </script>
</body>
</html>
