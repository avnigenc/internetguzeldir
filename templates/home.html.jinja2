<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <script data-ad-client="ca-pub-3821665691664234" async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <style>
        body {
          font-family: sans-serif;
          background: #fff;
          color: #3e4349;
          margin: 0;
          padding: 0;
          font-family: 'Garamond', 'Georgia', serif;
          font-size: 1rem;
          display: grid;
          grid-template-areas: 'aside main main';
          grid-gap: 0;
          padding: 0;
          height: 100vh;
          overflow: scroll;
        }

        h1, h2, h3, h4, h5 {
          margin: 0 0 1rem 0;
          padding: 0;
        }

        h2, h3, h4, h5 {
          margin: 1rem 0;
        }

        h1 {
          font-size: 28px;
          line-height: 36px;
          z-index: 10;
        }

        h2 {
          font-size: 24px;
          line-height: 30px;
          z-index: 9;
        }

        h3 {
          font-size: 20px;
          line-height: 26px;
          z-index: 8;
        }

        h4 {
          font-size: 16px;
          line-height: 22px;
          z-index: 7;
        }

        main h1:first-child {
          margin-top;
             0;
        }

        aside {
          grid-area: aside;
          padding: 2rem;
          height: 100vh;
          overflow: scroll;
          border-right: 1px solid black;
          background: floralwhite;
        }

        main {
          grid-area: main;
          overflow: scroll;
          padding: 1rem 1rem 1rem 2rem;
          background: rgb(119, 119, 119);
          background: linear-gradient(90deg, rgba(119, 119, 119, 1) 0%, rgba(153, 153, 153, 1) 0.1%, rgba(187, 187, 187, 1) 0.3%, rgba(221, 221, 221, 1) 0.6%, rgba(238, 238, 238, 1) 1%, rgba(255, 255, 255, 1) 1.5%, rgba(255, 255, 255, 1) 100%);
          scroll-behavior: smooth;
        }

        aside h2 {
          margin-top: 0;
        }

        aside ul {
          margin: 0 0 0 1rem;
          padding: 0;
        }

        aside li {
          margin: 0 0 .5rem 0;
          list-style: square;
          white-space: nowrap;
        }

        #sections {
          height: 100vh;
          overflow: scroll;
        }

        section {
          margin: 0;
          padding: 0;
        }

        section .inner {
          margin: 0 0 0 1rem;
          padding: 0 0 0 1rem;
          border-left: 1px solid lightgray;
        }

        section:first-child {
          margin-top: 0;
        }

        section:last-child {
          margin-bottom: 0;
        }

        ul.links {
          list-style-type: none;
          margin: 0;
          padding: 0;
          font-family: serif;
        }

        ul.links li {
          display: flex;
          flex-direction: row;
          margin: 0 0 1rem 0;
        }

        ul.links li:last-child {
          margin: 0;
        }

        ul.links li .favicon {
          width: 16px;
          height: 16px;
          display: flex;
          margin: 3px 5px 0 0;
        }

        ul.links li .content {
          display: flex;
          flex-direction: column;
          flex-grow: 1;
          margin: 0;
        }

        ul.links li .content .desc {
            margin-top: .2rem;
        }

        a {
          color: #004b6b;
          text-decoration: underline;
        }

        @media only screen and (max-width: 600px) {
          aside {
            display: none;
          }

          body {
            padding: .5rem;
          }

          section .inner {
            margin: .5rem 0 .5rem .5rem;
            padding: .5rem 0 .5rem .5rem;
          }
        }

        </style>
    </head>
    <body>
        <aside>
            <nav>
                <h2>Kategoriler</h2>
                <ul>
                {% for section_title, section_props in sections.sections.items() recursive %}
                    <li class="level{{loop.depth + 1}}">
                        <a href="#{{ section_props.slug }}">{{ section_title }}</a>
                    </li>
                    {% if section_props.sections %}
                        <ul>
                            {{ loop(section_props.sections.items()) }}
                        </ul>
                    {% endif %}
                {% endfor %}
                </ul>
            </nav>
            </aside>
        <main>
            {% for section_title, section_props in sections.sections.items() recursive %}
                <section level{{ loop.depth }}" id="{{ section_props.slug }}">
                    <h{{loop.depth + 1}}>{{ section_title }}</h{{loop.depth + 1}}>
                    <div class="inner">
                        {% if section_props.links %}
                            <ul class="links">
                            {% for link in section_props.links %}
                                <li class="link">
                                    <img class="favicon"src="https://www.google.com/s2/favicons?domain={{ link.url }}" />
                                    <div class="content">
                                        <div class="title"><a target="_blank" href="{{ link.url }}">{{ link.title}}</a></div>
                                        <div class="desc">{{link.desc}}</div>
                                    </div>
                                </li>
                            {% endfor %}
                            </ul>
                        {% endif %}
                        {% if section_props.sections %}
                            {{ loop(section_props.sections.items()) }}
                        {% endif %}
                    </div>
                </section>
            {% endfor %}
            <!-- Global site tag (gtag.js) - Google Analytics -->
            <script async src="https://www.googletagmanager.com/gtag/js?id=UA-86514140-3"></script>
            <script>window.dataLayer = window.dataLayer || [];function gtag(){dataLayer.push(arguments);}gtag('js', new Date());gtag('config', 'UA-86514140-3');</script>
        </main>
    </body>
</html>
