href="https://docs.google.com/forms/d/e/1FAIpQLSdxpZ_TYzDVaF5QAy-7aqGtoHtscfEGrBpZxANr9M35o5XBrw/viewform">Tavsiye
Gönder</a></p>
</div>
  <table>
    <tr><th>İsim</th><th>Açıklama</th><th>Tür</th><th>Dil</th></tr>
    {% for section, links in sections.items() %}
      <tr><td class="seperator" colspan=4><h2>{{ section }}</h2></td></tr>
      {% for name, properties in links.items() %}
      <tr>
        <td class="title"><a href="{{ properties.url }}">{{ name }}</a></td>
        <td class="desc">{{properties.desc}}</td>
        <td class="tayp">{{properties.tayp}}</td>
        <td>{{properties.lang}}</td>
      </tr>
      {% endfor %}
    {% endfor %}
