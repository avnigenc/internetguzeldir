{% extends "base.html.jinja2" %}

{% block title %}{{ link.title}} — Internet Güzeldir{% endblock title %}
{% block description %}{{ link.desc }}{% endblock %}

{% block main %}

<div id="link_detail">
  <div class="inner">
    <h2 class="mb">{{ link.title }}</h2>
    <p class="mb">{{ link.desc }}</p>
    <p class="mb"><a class="link" target="_blank" href="{{ link.url }}">{{ link.url|truncate(50, False, '...', 0) }}</a></p>
    <p class="meta">Bu site {{ link.lang }} dilinde bir {{ link.kind }} olup, {{ link.create_time.strftime('%d-%m-%Y') }} tarihinde eklenmiştir.</p>
  </div>
</div>

<script src="https://utteranc.es/client.js"
        repo="miratcan/internetguzeldir"
        issue-term="pathname"
        label="comment"
        theme="github-dark"
        crossorigin="anonymous"
        async>
</script>

{% endblock %}
